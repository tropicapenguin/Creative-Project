# Drawing.kv implementation
 
# for assigning random color to the brush
#:import rnd random
 
windowManager:
	First:
	Drawing:
# Paint brush coding
<Paint_brush>:
    size_hint: None, None
    size: 10, 10
    pos: 0, 0
    canvas:
        Color:
            rgb: 0, 0, 1
        Ellipse:
            pos: self.x, self.y
 
# Button Screen
<First>:
    name: 'main'
    canvas:
	Button:
	    text: 'Start'
	    on_press:
		root.manager.current= 'draw'
# Drawing pad creation         
<Drawing>:
    name: 'draw'
    canvas:
        Color:
            rgb: .2, .5, .5
        Rectangle:
            size: root.size
            pos: root.pos