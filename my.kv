<MainManager>:
    MainWindow:
	SecondWindow:
	ThirdWindow:
            
# Button Screen
<MainWindow>:
	name: "main"
    Button:
    	text: "Start"
    	on_press: app.root.current = "second"
		
# Drawing pad creation         
<SecondWindow>:
	name: "second"
	canvas:
		Color:
			rgb: 0, 0, 0
        Rectangle:
            size: root.size
            pos: root.pos
            
# Gap Screen
<ThirdWindow>:
	name: "three"
    canvas:
		Color:
			rgb: .2, .5, .2
        Rectangle:
            size: root.size
            pos: root.pos